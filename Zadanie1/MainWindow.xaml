<Window x:Class="Zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1"
        mc:Ignorable="d"
        Title="Maszyna losująca karty" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Image Grid.Row="0" Name="CardImg1" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Image Grid.Row="0" Name="CardImg2" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Image Grid.Row="0" Name="CardImg3" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Image Grid.Row="0" Name="CardImg4" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Image Grid.Row="0" Name="CardImg5" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </DockPanel>


        <Button Grid.Row="1" Width="200" Height="30" Click="GenerateRandom" Name="btn" Content="Losuj kartę" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gold" FontWeight="SemiBold" />
    </Grid>
</Window>
